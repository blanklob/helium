<!doctype html>
<html class="is-loading" lang="{{- request.locale.iso_code -}}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <meta name="format-detection" content="telephone=no">

    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>

    <title>{{- 'gift_cards.issued.title' -}}</title>
    <meta name="description" content="{{- 'gift_cards.issued.subtext' -}}">

    {%- if canonical_url != blank -%}
      <link rel="canonical" href="{{ canonical_url }}">
    {%- endif -%}

    {%- liquid
      render 'head-metas'
      render 'head-settings'
      render 'head-assets'
    -%}

    {% comment %} TODO: ADD CSS ASSET {% endcomment %}
    {% comment %} {{ 'giftcard.css' | asset_url | stylesheet_tag }} {% endcomment %}

    <!-- Header hook for plugins -->
    {{ content_for_header }}
  </head>
  <body>
    {% comment %} Accessibilty snippet {% endcomment %}
    {%- render 'component-a11y' -%}

    <main id="MainContent" role="main" class="l-giftcard u-focus-none" tabindex="-1">
      {{ content_for_layout }}
    </main>

  </body>
</html>
