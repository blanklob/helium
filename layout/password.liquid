<!doctype html>
<html class="no-js" lang="{{- request.locale.iso_code -}}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">

    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    {%- unless settings.fonts_header.system? and settings.fonts_body.system? -%}
    <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    {%- endunless -%}

    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    {%- unless settings.fonts_header.system? and settings.fonts_body.system? -%}
    <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    {%- endunless -%}

    <link rel="preload" href="{{ 'password.css' | asset_url }}" as="style">
    <link rel="preload" href="{{ 'password.js' | asset_url }}" as="script">

    {%- liquid
      render 'head-seo'
      render 'head-metas'
      render 'head-settings'
    -%}

   {{ 'password.css' | asset_url | stylesheet_tag }}
   <script src="{{- 'password.js' | asset_url -}}" defer="defer"></script>

    <!-- Header hook for plugins -->
    {{ content_for_header }}
  </head>
  <body class="layout-password template-{{- template.name -}}{%- if template.suffix -%}-{{- template.suffix -}}{%- endif -%}">
    {% comment %} Accessibilty {% endcomment %}
    <div class="a11y container -medium u-pv-small" tabindex="-1">
      <a role="button" class="button -small" href="#mainContent">
        {{- "accessibility.skip_to_content" | t -}}
      </a>
      <button type="button" class="button -small" onclick="this.blur();">{{ "accessibility.close" | t }}</button>
    </div>

    {%- section 'header-password' -%}

    <main id="mainContent" class="u-focus-none" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    <ul hidden>
      <li id="a11y-refresh-page-message">{{ 'accessibility.refresh_page' | t }}</li>
    </ul>

  </body>
</html>
