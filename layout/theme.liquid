<!doctype html>
<html class="--is-loading" lang="fr">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">

    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>

    {%- liquid
      render 'head.seo'
      render 'head.metas'
      render 'head.settings'
      render 'head.vendors'
    -%}


    {{ 'theme.css' | asset_url | stylesheet_tag }}
    <script src="{{- 'theme.js' | asset_url -}}" type="text/javascript" defer></script>

    <!-- Header hook for plugins -->
    {{ content_for_header }}
  </head>
  <body>
    {% comment %} Accessibilty snippet {% endcomment %}
    {%- render 'components.a11y' -%}

    {%- section 'header' -%}

    <main id="MainContent" role="main" class="o-{{ template.name | handle }} u-focus-none" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {%- section 'footer' -%}

  </body>
</html>
