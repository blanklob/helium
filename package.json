{
  "name": "flow",
  "version": "1.0.4",
  "main": "base.js",
  "description": "Modern Shopify development workflow, with Online Store 2.0 features and built with performance and accessibility in mind..",
  "repository": "https://github.com/younessidbakkasse/flow.git",
  "author": "Youness Id bakkasse",
  "license": "MIT",
  "keywords": [
    "boilerplate",
    "webpack",
    "typescript",
    "shopify",
    "sass",
    "postcss"
  ],
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "start": "shopify theme serve",
    "build": "webpack --config .config/webpack.config.prod.js",
    "watch": "webpack watch --config .config/webpack.config.dev.js",
    "zip": "shopify theme package .",
    "lint": "shopify theme check -a && lit-analyzer",
    "format": "prettier --config .config/.prettier.config.js --ignore-path .config/.prettierignore --write .",
    "pull": "shopify theme pull -n",
    "push": "shopify theme push",
    "stats": "webpack --profile --json > stats.json"
  },
  "devDependencies": {
    "css-loader": "^5.2.6",
    "media-query-plugin": "^1.5.0",
    "mini-css-extract-plugin": "^1.6.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "postcss-loader": "^6.1.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.3.2",
    "sass": "^1.35.1",
    "sass-loader": "^12.1.0",
    "size-plugin": "2.0.2",
    "ts-lit-plugin": "^1.2.1",
    "ts-loader": "^9.2.5",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.4.2",
    "webpack": "^5.41.1",
    "webpack-cli": "^4.7.2",
    "webpack-merge": "^5.8.0",
    "webpack-remove-empty-scripts": "^0.7.1"
  },
  "dependencies": {}
}
