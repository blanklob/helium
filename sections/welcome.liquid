{{ 'section-welcome.css' | asset_url | stylesheet_tag }}

<div class="o-container o-container--md u-align-center" data-section-id="{{- section.id -}}">
  <div class="s-welcome__wrapper u-mv-xl" style="max-width: 45rem;">
    <h1 class="c-heading c-heading--h1 c-heading--bold u-mb-md">{{ section.settings.heading }}</h1>
    <h2 class="c-heading c-heading--h2 u-mb-s">{{ section.settings.subheading }}</h2>
    <a class="s-welcome__link c-button u-mb-md"
      href="https://workflow.younessidbakkasse.com/docs"
      target="_blank">{{ section.settings.link_label }}
      {%- render 'component-icon'
        icon: 'arrow',
        icon_size: 20,
        icon_class: 'u-ml-s'
      -%}</a>
    <p class="c-heading c-heading--h4">
      Open-source MIT Licensed. <a href="https://github.com/younessidbakkasse/workflow" target="_blank">GitHub v1.1.0</a>
    </p>
  </div>
  <div class="s-welcome__feature-wrapper o-grid o-grid--middle u-mb-l">
    {% for block in section.blocks %}
      <div class="s-welcome__feature o-grid__cell u-1/1 u-1/3@from-s u-mb-l">
        <h2 class="c-heading c-heading--h2 c-heading--bold u-mb-md">{{ block.settings.heading }}</h2>
        <h3 class="c-heading c-heading--h3">{{ block.settings.description }}</h3>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Welcome",
  "tag": "section",
  "class": "s-welcome",
  "settings": [
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subeading"
    },
    {
      "type": "text",
      "id": "link_label",
      "label": "Link label"
    }
  ],
  "blocks": [
    {
      "name": "Card",
      "type": "card",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ]
}
{% endschema %}
