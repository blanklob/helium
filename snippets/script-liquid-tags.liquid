{% comment %}
    Passes liquid settings to Javascript global THEME variable.

    Usage:
    {%- render 'script-liquid-tags' -%}

{% endcomment %}

<script type="text/javascript">
  var THEME = {
      color: {
          brandPrimary: "{{ settings.color_brand_primary }}",
          brandSecondary: "{{ settings.color_brand_secondary }}",
          textHeading: "{{ settings.color_text_heading }}",
          textBody: "{{ settings.color_text_body }}",
          textLinks: "{{ settings.color_text_links }}",
          btnPrimary: "{{ settings.color_btn_primary }}",
          btnPrimaryText: "{{ settings.color_btn_primary_text }}",
          pageBackground: "{{ settings.color_page_background }}",
      },
      breakpoint: {
          medium: 750,
          large: 990,
          widescreen: 1400
      },
      asset: {
          stylesheet: "{{ 'theme.css' | asset_url }}",
          script: "{{ 'theme.js' | asset_url }}",
      }
  };
  document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
</script>
